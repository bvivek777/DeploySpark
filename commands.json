{
    "ubuntu" : {
        "package" : {
            "JAVA" : "apt install openjdk-11-jdk",
            "python3" : "apt -y install python3",
            "pip3" : "apt -y install python3-pip",
            "psutil" : "pip3 install psutil",
            "wget" : "apt -y install wget"
        },
        "remove" : {
            "JAVA" : "apt remove openjdk-11-jdk",
            "python3" : "apt remove python3",
            "pip3" : "apt remove python3-pip",
            "psutil" : "pip3 uninstall psutil"
        },
        "check" : {
            "JAVA" : "java -version",
            "python3" : "python3 -V",
            "pip3" : "pip3 -V",
            "SPARK" : "cd /opt/spark",
            "wget" : "wget --version"
        }
    },
    "Download" : {
        "SPARK" : "http://apache.mirrors.hoobly.com/spark/spark-3.0.0-preview2/spark-3.0.0-preview2-bin-hadoop2.7.tgz",
